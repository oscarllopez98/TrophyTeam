<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryBackground"
    android:paddingHorizontal="5dp"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/home_table_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4"
        android:background="@drawable/ripple"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TableRow>
            <!-- Exercise Nickname -->
            <TextView
                android:id="@+id/recyclerview_row_exercise_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:minWidth="100dp"
                android:maxWidth="100dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryText"
                android:paddingVertical="15dp"
                android:text="@string/subtitles_placeholder_value"/>

            <!-- Exercise Name -->
            <TextView
                android:id="@+id/recyclerview_row_exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_column="2"
                android:minWidth="70dp"
                android:maxWidth="70dp"
                android:textSize="18sp"
                android:textColor="@color/colorBlack_Fade"
                android:text="@string/subtitles_placeholder_value"/>

            <!-- Exercise Distance w/ Unit -->
            <TextView
                android:id="@+id/recyclerview_row_exercise_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:minWidth="50dp"
                android:maxWidth="50dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack_Fade"
                android:text="@string/subtitles_placeholder_value"/>

            <!-- Exercise Time (HH:MM:SS) -->
            <TextView
                android:id="@+id/recyclerview_row_exercise_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:minWidth="50dp"
                android:maxWidth="50dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack_Fade"
                android:text="@string/subtitles_placeholder_value"/>
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>