<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Distance Pickers -->
    <NumberPicker
        android:id="@+id/number_picker_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/title_add_exercise"
        app:layout_constraintRight_toLeftOf="@+id/number_picker_fraction"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <NumberPicker
        android:id="@+id/number_picker_fraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/title_add_exercise"
        app:layout_constraintRight_toLeftOf="@+id/number_picker_unit"
        app:layout_constraintLeft_toRightOf="@+id/number_picker_whole"/>

    <NumberPicker
        android:id="@+id/number_picker_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/title_add_exercise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/number_picker_fraction"/>

</androidx.constraintlayout.widget.ConstraintLayout>